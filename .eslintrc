{
  "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
  },
  "extends": "eslint:recommended",
  "env": {
    "es6": true,
    "browser": true,
    "jquery": true,
    "node": true              // added this line, which fixed the false return we kept getting
  },
  "rules": {
    "semi": 1,
    "indent": ["warn", 2],
    "no-console": "warn",
    "no-debugger": "warn"
  }
 }